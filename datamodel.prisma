enum Previledge {
  SUPERADMIN
  ADMIN
  MODERATOR
  AUTHOR
  READER
}

type Post {
  id: ID! @unique
  title: String!
  content: String!
  category: String!
  excerpt: String!
  updatedAt: DateTime!
  createdAt: DateTime!
  author: [User]!
}

type User {
  id: ID! @unique
  socialId: String!
  fname: String!
  lname: String!
  name: String!
  phone: String
  email: String!
  gender: String
  birthday: String
  bio: String
  posts: [Post]!
  profilePicture: String!
  followers: [User]!
  previledge: [Previledge]!
  signUpMethod: String!
  updatedAt: DateTime!
  createdAt: DateTime!
}